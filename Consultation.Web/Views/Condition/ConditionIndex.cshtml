@model IList<Condition>

<h3>Doctors</h3>

<div asp-roles="@Role.Doctor, Patient" class="mt-4 mb-4">
    <!-- add an action link styled as a button to navigate to Create Action -->
    <a asp-action="ConditionDetails" class="btn btn-primary btn-sm">View Conditions</a>
</div>

<div>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>DiagnosedDate</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.DiagnosedDate</td>
                    <td>@item.Description</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>