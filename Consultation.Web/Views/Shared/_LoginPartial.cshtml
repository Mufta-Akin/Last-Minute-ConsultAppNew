<!-- AMC Login partial to display links on nav bar -->
<!-- Logged in -->
<div class="navbar-nav" asp-condition="@User.Identity.IsAuthenticated">
    <div class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="bi-person-fill"></i> @User.Identity.Name
        </a>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
            <a class="dropdown-item" asp-controller="User" asp-action="UpdateProfile" asp-roles="@nameof(Role.Practice)"><i class="bi bi-gear"></i> Update Admin Profile</a>
            <a class="dropdown-item" asp-controller="Doctor" asp-action="DoctorEdit" asp-roles="@nameof(Role.Doctor)"><i class="bi bi-gear"></i> Update Doctor Profile</a>
            <a class="dropdown-item" asp-controller="Patient" asp-action="PatientEdit" asp-roles="@nameof(Role.Patient)"><i class="bi bi-gear"></i> Update Patient Profile</a>
            <a class="dropdown-item" asp-controller="Staff" asp-action="StaffEdit" asp-roles="@nameof(Role.Staff)"><i class="bi bi-gear"></i> Update Staff Profile</a>

            <a class="dropdown-item" asp-controller="User" asp-action="UpdatePassword"><i class="bi bi-lock-fill"></i> Update Password</a>
            <hr class="dropdown-divider">
            <form asp-controller="User" asp-action="Logout">
                <button type="submit" class="dropdown-item btn btn-link"><i class="bi bi-person-dash-fill"></i> Logout</button>
            </form>
        </div>
    </div>
</div>

<!-- Not Logged in -->
<div class="navbar-nav" asp-condition="@(!User.Identity.IsAuthenticated)">
    <a class="nav-link text-dark" asp-controller="Home" asp-action="HomeIndex">Login</a>
    @*<a class="nav-link text-dark"  asp-controller="User" asp-action="Register">Register</a>*@
</div>
