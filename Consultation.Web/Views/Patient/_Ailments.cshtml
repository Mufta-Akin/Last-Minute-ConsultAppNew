@model Patient

<h5 class="mt-2 text-info">Ailments</h5>
<table class="table table-striped table-sm">
    <thead class="thead-dark">
        <tr>
            <th style="width: 40%">Issue</th>
            <th style="width: 25%">Created</th>
            <th style="width: 15%">Active</th>
            <th style="width: 20%">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var a in Model.Ailments) {
        <tr>
            <td>@a.Issue</td>
            <td>@a.CreatedOn</td>

            <!-- asp-condtion to render done icon if Active and clear icon if inactive -->
            <td>
                <span asp-condition=@(a.Active)>Yes</span>
                <span asp-condition=@(!a.Active)>No</span>
            </td>
            <td>
                <div>
                    <a asp-controller="Ailment" asp-action="Details" asp-route-id="@a.Id" class="btn btn-info">Ailment Details</a>|
                    <a asp-controller="Ailment" asp-action="Delete" asp-route-id="@a.Id" class="btn btn-danger">Delete</a>

                </div>
            </td>
        </tr>   
        }
    </tbody>
</table>