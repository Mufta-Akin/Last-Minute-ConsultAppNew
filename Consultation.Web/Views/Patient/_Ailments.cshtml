@model Patient

<h5 class="mt-2 text-info">Ailments</h5>
<table class="table table-striped table-sm">
    <thead class="thead-dark">
        <tr>
            <th style="width: 25%">Issue</th>
            <th style="width: 45%">Symptoms</th>
            <th style="width: 20%">Created</th>
            <th style="width: 10%">Active</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var a in Model.Ailments) {
        <tr>
            <td>@a.Issue</td>
            <td>@a.Symptoms</td>
            <td>@a.CreatedOn</td>
            <!-- asp-condtion to render done icon if Active and clear icon if inactive -->
            <td>
                <span asp-condition=@(a.Active)>Yes</span>
                <span asp-condition=@(!a.Active)>No</span>
            </td>
        </tr>   
        }
    </tbody>
</table>