@model DoctorViewModel

<partial name="_Breadcrumbs" model=@(new [] { ("/", "Home"), ("/doctor", "Doctors"), ("","Edit") })>

    <h3 class="mt-4 mb-4">Edit Doctor</h3>

    <div class="card rounded shadow p-3">

        <form asp-action="DoctorEdit">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- we hide the id as its not user editable but needs to be in the -->
            <!-- form to ensure the patient passed to the controller is complete -->
            <input type="hidden" asp-for="Id" class="form-control" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Speciality" class="control-label"></label>
                <select asp-for="Speciality" class="form-control" asp-items="Html.GetEnumSelectList<Speciality>()">
                    <option>Select Speciality</option>
                </select>
                <span asp-validation-for="Speciality" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

             <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Mobile" class="control-label"></label>
                <input asp-for="Mobile" class="form-control" />
                <span asp-validation-for="Mobile" class="text-danger"></span>
            </div>

            <!-- submit button and cancel link which navigates to Index action -->
            <div class="form-group mt-4">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-secondary" asp-action="DoctorIndex">Cancel</a>
            </div>
        </form>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
