@model DoctorViewModel

<h4>Create Doctor</h4>

<div class="row">
   
    <form asp-action="DoctorCreate">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group mb-4">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Speciality" class="control-label"></label>
            <select asp-for="Speciality" class="form-control" asp-items="Html.GetEnumSelectList<Speciality>()">
                <option>Select Speciality</option>
            </select>
            <span asp-validation-for="Speciality" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="col form-group mb-4">
            <label asp-for="Password" class="control-label"><i class="bi-shield-lock-fill"></i> Password</label>
            <input type="password" asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="Mobile" class="control-label"></label>
            <input asp-for="Mobile" class="form-control" />
            <span asp-validation-for="Mobile" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a asp-action="DoctorIndex" class="btn btn-secondary">Cancel</a>
        </div>
    </form>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
